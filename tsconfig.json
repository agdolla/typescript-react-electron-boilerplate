{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "ts-build",
    "jsx": "preserve",
    "types": ["mocha", "node"]
  },
  "exclude": [
    "node_modules",
    "package"
  ]
}